<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>

	<property name="show_sql">true</property>
	<property name="hbm2ddl.auto">update</property>
	<property name="dialect">org.hibernate.dialect.DerbyDialect</property>
	<property name="myeclipse.connection.profile">
		MyEclipse Derby
	</property>
	<property name="connection.url">
		jdbc:derby://localhost:1527/myeclipse
	</property>
	<property name="connection.username">classiccars</property>
	<property name="connection.password">myeclipse</property>
	<property name="connection.driver_class">
		org.apache.derby.jdbc.ClientDriver
	</property>

	<mapping resource="com/bussniess/domain/ElecText.hbm.xml" />
	<mapping resource="com/bussniess/domain/LinInf.hbm.xml" />
	<mapping resource="com/bussniess/domain/OffPro.hbm.xml" />
	<mapping resource="com/bussniess/domain/ProBak.hbm.xml" />
	<mapping resource="com/bussniess/domain/SpePro.hbm.xml" />
	<mapping resource="com/bussniess/domain/ProSum.hbm.xml" />
	<mapping resource="com/bussniess/domain/Users.hbm.xml" />
	<mapping resource="com/bussniess/domain/Roles.hbm.xml" />
	<mapping resource="com/bussniess/domain/Privileges.hbm.xml" />
	<mapping resource="com/bussniess/domain/logText.hbm.xml"/>

</session-factory>
</hibernate-configuration>	